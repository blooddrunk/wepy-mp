
<view style="background-image: url(/static/images/bg.jpg);" class="login tw-flex tw-flex-col tw-items-center tw-h-screen tw-bg-cover">
  <view class="tw-flex tw-flex-col tw-items-center tw-justify-center tw-mt-20 tw-w-40 tw-h-40 tw-rounded-full tw-bg-white">
    <image src="/static/images/logo.png" class="tw-w-24 tw-h-24"></image>
  </view>

  <form class="tw-self-stretch tw-px-12 tw-mt-16">
    <view class="login__input-wrapper tw-flex tw-items-center tw-py-2">
      <input value="{{ mobile }}" bindinput="_proxy" data-model-id="0" placeholder-class="tw-text-white" type="text" placeholder="手机号码" aria-label="手机号码" data-wpy-evt="25-0" class="tw-appearance-none tw-bg-transparent tw-border-none tw-w-full tw-text-white tw-mr-3 tw-py-1 tw-px-2 tw-leading-normal"></input>
    </view>

    <view class="login__input-wrapper tw-flex tw-items-center tw-py-2 tw-mt-2">
      <input value="{{ captcha }}" bindinput="_proxy" data-model-id="1" placeholder-class="tw-text-white" type="text" placeholder="验证码" aria-label="验证码" data-wpy-evt="25-1" class="tw-appearance-none tw-bg-transparent tw-border-none tw-w-full tw-text-white tw-mr-3 tw-py-1 tw-px-2 tw-leading-normal"></input>
      <label data-wpy-evt="25-2" bindtap="_proxy" class="tw-flex-shrink-0 tw-text-white tw-py-1 tw-mr-2 tw-text-xs tw-border-white tw-border-t-0 tw-border-l-0 tw-border-r-0 {{ [ canSendMessage ? 'login__captcha-sender' : '' ] }}">
        {{ captchaText }}
      </label>
    </view>

    <view wx:if="{{ error }}" class="tw-mt-4 tw-text-xs tw-text-red-500">
      {{ error }}
    </view>

    <button data-wpy-evt="25-3" bindtap="_proxy" class="tw-mt-16 tw-border tw-border-solid tw-border-blue-600 tw-text-blue-600 tw-text-base tw-bg-transparent">
      登 录
    </button>
  </form>
</view>
